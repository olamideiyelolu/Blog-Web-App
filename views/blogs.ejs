<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Bloggers</title>
</head>
<body>
   
    <main class="container">

        <div class="container">
             <!-- Navigation Bar with bootstrap components -->
            <header class="d-flex justify-content-center py-3">
              <ul class="nav nav-pills">
                <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="/blogs" class="nav-link">Blogs</a></li>
             
              </ul>
            </header>
        </div>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center gege">
            <!-- This displays all blogs created with the design of bootstrap components -->
            <% for(var i = 0; i < listOfBlogs.length; i++){ %>
            <div class="col">
              <div class=" mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <!-- This prints out the title of the Blog -->
                     <!-- It is also a link to the Blog's content -->
                  <h4 class="my-0 fw-normal"><a href="-content?blogKey=<%= listOfBlogs[i] %>"><%= listOfBlogs[i] %></a></h4>
                </div>
                <div class="card-body d-flex justify-content-end">
                  
                    <!-- This is a form to carry out the Delete functionality -->
                  <form action="/delete" method="post" class="deleteForm">
                    <input type = "hidden" name="blogTitle" value= "<%= listOfBlogs[i] %>" />
                    <button type="submit" id="deleteButton" title="Delete" class="btn btn-danger btn-sm"><svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 -960 960 960" width="20px" fill="#FFFFFF"><path d="M312-144q-29.7 0-50.85-21.15Q240-186.3 240-216v-480h-48v-72h192v-48h192v48h192v72h-48v479.57Q720-186 698.85-165T648-144H312Zm336-552H312v480h336v-480ZM384-288h72v-336h-72v336Zm120 0h72v-336h-72v336ZM312-696v480-480Z"/></svg></button> 
                </form>
                  
                </div>
              </div>
            </div>
            <% } %>
        </div>
        <script>
            // This prompts the user for another confirmation to delete the blog
            document.querySelectorAll('.deleteForm').forEach(form => {
            form.addEventListener('submit', function(event) {
                if (!confirm('Are you sure you want to delete this blog?')) {
                    event.preventDefault();
                    console.log('Form submission cancelled.');
                }
            });
        });
        </script>
    
</body>
</html>


